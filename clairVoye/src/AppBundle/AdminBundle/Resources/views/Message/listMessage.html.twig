{# src/AppBundle/AdminBundle/Resources/views/Default/listMessage#}
{% block bodyContent %} 
    <table class="u-full-width" style="border: 1px solid black;">
        <thead>
            <tr>
                <th>Title</th>
                <th>Texte</th>
                <th>Ecrit par</th>
                <th>Publi√©e</th>
            </tr>
        </thead>
        <tbody>
            {% for Message in message%}
                <tr>
                    <td>{{Message.title}}</td>
                    <td>{{Message.texte}}</td>
                    {#<td>{{Message.person}}</td>#}
                    <td>{%if Message.published == 1%}
                        oui
                    {%else%}
                        non
                        {%endif%}
                        </td>
                        {#<td>{{Message.goldBooks}}</td>#}
                        <td>
                            <a  href="{{ path('app_bundle_admin_message_home',
                                            {'id' : Message.id},
                                            {'title': Message.title},
                                            {'texte': Message.texte},
                                            {'person':Message.person},
                                            {'published':Message.published},
                                            {'goldBooks':Message.goldBooks}
                           )}}">
                                <a href="">
                                    <img class="edit" src="{{ asset('images/edit.png') }}" alt="modifier" style="width:20%;"/>
                                </a>
                                &nbsp;
                                <a {#href="{{ path('admin_category_delete',{'id' : Citizen.id})}}"#}>
                                    <img class="delete" src="{{ asset('images/delete.png') }}" alt="supprimer" style="width:20%;"/>
                                </a>
                        </td>
                    </tr>
                </tbody>
                {% endfor %}
                </table>
                {% endblock %}
                    {% block addBtn %} 
                        <a class="button" id="btn_add" href="{#{{ path('admin_category_add')}}#}">Ajouter une Citation</a>
                    {% endblock %}