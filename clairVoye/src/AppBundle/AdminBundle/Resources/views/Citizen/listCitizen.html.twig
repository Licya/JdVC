{# src/AppBundle/AdminBundle/Resources/views/Default/listCitizen#}
{% block bodyContent %} 
    <table class="u-full-width" style="border: 1px solid black;">
        <thead>
            <tr>
                <th>Citation</th>
                <th>Auteur</th>
                <th>Publi√©e</th>
                <th>Position</th>
            </tr>
        </thead>
        <tbody>
            {% for Citizen in citizens%}
                <tr>
                    <td>{{Citizen.citizen}}</td>
                    <td>{{Citizen.author}}</td>
                    <td>{%if Citizen.published == 1%}
                        oui
                    {%else%}
                        non
                        {%endif%}
                        </td>
                        <td>{{Citizen.position}}</td>
                        <td>
                            <a  href="{{ path('app_bundle_admin_citizen_home',
                                            {'id' : Citizen.id},
                                            {'citizen': Citizen.citizen},
                                            {'author': Citizen.author},
                                            {'published':Citizen.published},
                                            {'position':Citizen.position}
                           )}}">
                                <a href="">
                                <img class="edit" src="{{ asset('images/edit.png') }}" alt="modifier" style="width:20%;"/>
                            </a>
                            &nbsp;
                            <a {#href="{{ path('admin_category_delete',{'id' : Citizen.id})}}"#}>
                                <img class="delete" src="{{ asset('images/delete.png') }}" alt="supprimer" style="width:20%;"/>
                            </a>
                        </td>
                    </tr>
                </tbody>
                {% endfor %}
                </table>
                {% endblock %}
                    {% block addBtn %} 
                        <a class="button" id="btn_add" href="{#{{ path('admin_category_add')}}#}">Ajouter une Citation</a>
                    {% endblock %}